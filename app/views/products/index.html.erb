<div class="row">
  <table class="table table-striped table-hover">
    <tr>
      <th>Image url</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
    </tr>

  <% @products.each do |product| %>
    <tr>
      <td class="span2"><%= image_tag product.image_url %></td>
      <td class="span4"><%= link_to product.name, product %></td>
      <td class="span5"><%= product.description %></td>
      <td class="span1"><%= number_to_currency(product.price) %></td>
    </tr>
  <% end %>
  </table>
</div>
